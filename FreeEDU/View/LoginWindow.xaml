<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeEDU.View"
        xmlns:ViewModel="clr-namespace:FreeEDU.ViewModel" x:Class="FreeEDU.View.LoginWindow"
        mc:Ignorable="d"
        Title="Login" MinHeight="380" MinWidth="{Binding CurrentWidth}"
		Height="380" Width="{Binding CurrentWidth}"
		MaxHeight="380" MaxWidth="{Binding CurrentWidth}"
		WindowStyle="None" Style="{StaticResource LWStyle}">

	<Window.DataContext>
		<ViewModel:LoginWindowViewModel/>
	</Window.DataContext>

	<ContentControl Margin="35,10"
					Content="{Binding CurrentPage}"/>

</Window>
