<Window x:Class="FreeEDU.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeEDU.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="350"
		WindowStyle="None" Style="{StaticResource LWStyle}">

	<StackPanel Grid.Column="1" Margin="50,25">

		<Label FontSize="24"
				   FontWeight="DemiBold"
				   Foreground="#52026E"
				   Content="E-mail"/>

		<TextBox Style="{StaticResource Login_input_box}"/>

		<Label FontSize="24"
				   FontWeight="DemiBold"
				   Foreground="#52026E"
				   Content="Password"/>

		<TextBox Style="{StaticResource Login_input_box}"/>

		<StackPanel Margin="0,10,0,0" Orientation="Horizontal">

			<Button Style="{StaticResource Login_bt}" Content="Login"/>

			<Button Margin="15,0,0,0" Style="{StaticResource Help_link_bt}" Content="Reset password"/>

		</StackPanel>

		<Button HorizontalAlignment="Center"
				Margin="0,15,0,0"
				Style="{StaticResource Help_link_bt}"
				Content="Registr"/>
		
	</StackPanel>

</Window>
