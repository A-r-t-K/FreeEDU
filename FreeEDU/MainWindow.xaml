<Window x:Class="FreeEDU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeEDU"
        mc:Ignorable="d"
        Title="FreeEDU" 
		Height="450" Width="800" 
		MinHeight="450" MinWidth="800" 
		BorderBrush="White" OpacityMask="White" 
		WindowStyle="None" Style="{StaticResource MWStyle}">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="30"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0"
					Background="{StaticResource MainMenuBg}">
			<Button Content="Главная" Style="{StaticResource Menu_bt}"/>
			<Button Content="Главная" Style="{StaticResource Menu_bt}"/>
		</StackPanel>

		<Button VerticalAlignment="Center" Grid.Column="1" Height="50" Style="{StaticResource Mini-Exp_bt}"/>
	</Grid>

</Window>
