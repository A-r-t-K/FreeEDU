<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="Text" TargetType="TextBlock">
		<Setter Property="FontWeight" Value="DemiBold"/>
		<Setter Property="TextWrapping" Value="Wrap"/>
		<Setter Property="Foreground" Value="{StaticResource input_heading}"/>
	</Style>

	<Style x:Key="Text_xxxl" TargetType="TextBlock" BasedOn="{StaticResource Text}">
		<Setter Property="FontSize" Value="56"/>
	</Style>

	<Style x:Key="Text_xl" TargetType="TextBlock" BasedOn="{StaticResource Text}">
		<Setter Property="FontSize" Value="24"/>
	</Style>

	<Style x:Key="Text_md" TargetType="TextBlock" BasedOn="{StaticResource Text}">
		<Setter Property="FontSize" Value="16"/>
	</Style>

	<Style x:Key="Text_xs" TargetType="TextBlock" BasedOn="{StaticResource Text}">
		<Setter Property="FontSize" Value="12"/>
	</Style>

</ResourceDictionary>