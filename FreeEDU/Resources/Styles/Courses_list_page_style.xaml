<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FreeEDU">

	<Style x:Key="Courses_list" TargetType="ListBox">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0,1,0,0"/>
		<Setter Property="BorderBrush" Value="{StaticResource TopPanelBg}"/>
		<Setter Property="Padding" Value="15"/>
		<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="ItemTemplate">
			<Setter.Value>
				<DataTemplate>
					<Border Padding="30">
						<Border.Effect>
							<DropShadowEffect Color="{StaticResource List_item_shadow_cl}" BlurRadius="50" ShadowDepth="1"/>
						</Border.Effect>
						<Border CornerRadius="15" Background="White">
							<Grid Height="250" Width="175">
								<Grid.RowDefinitions>
									<RowDefinition/>
									<RowDefinition Height="0.2*"/>
									<RowDefinition Height="0.2*"/>
								</Grid.RowDefinitions>

								<Ellipse Width="125" Height="125">
									<Ellipse.Fill>
										<ImageBrush ImageSource="../../Resources/Controls/nesCastle.jpg"/>
									</Ellipse.Fill>
								</Ellipse>

								<Label	Grid.Row="1"
									BorderThickness="0,1,0,1"
									BorderBrush="{StaticResource Brush_input_box}"
									FontSize="18"
									FontWeight="DemiBold"
									HorizontalAlignment="Stretch"
									HorizontalContentAlignment="Center"
									Content="test"/>

								<Button Grid.Row="2" Style="{StaticResource Take_bt}"/>

							</Grid>
						</Border>
					</Border>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>